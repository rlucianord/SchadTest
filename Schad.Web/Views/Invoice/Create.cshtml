@section scripts {
    <script src="~/Scripts/app/InvoicePartialViews.js"></script>
    <script src="~/Scripts/app/Invoice.js"></script>
    <script src="~/Scripts/app/InventoryPartialViews.js"></script>

    <script>
        $('#holdListBtn').hide();
        $('.dropdown-toggle').dropdown();
        Invoice.index("", false);
        $(document).on("keypress", "#search-items", function (e) {
            if (e.which == 13) {
                var inputVal = $(this).val();
                if (inputVal !== "")
                    Invoice.index(inputVal, true);
            }
        });
        $(document).on("input", "#ItemNum", function (e) {
            var inputVal = $(this).val();
            if (inputVal.length >= 13) {
                $(this).text = inputVal;
            }
        });
        ///search de[artment]
        function Search() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("search-items-departments");
            filter = input.value.toUpperCase();
            table = document.getElementById("table-departments");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
        //CONTROL DEPARTMENTS
        $(document).on("keypress", "#search-items-departments", function (e) {
            if (e.which == 13) {

                Search();
            }
        });


        //END CONNTROL

        $(document).on("keypress", "#search-items-inventory", function (e) {
            if (e.which == 13) {
                var inputVal = $(this).val();
                Inventory.index(inputVal);
            }
        });
        $(document).on("input", "#search-items-inventory", function (e) {
            var inputVal = $(this).val();
            if (inputVal.length >= 14) {
                Inventory.index(inputVal);
            }
        });

        $(document).on("keypress", "#search-stocks-inventory", function (e) {
            if (e.which == 13) {
                var inputVal = $(this).val();
                Inventory.restock(inputVal);
            }
        });

        $('#opt-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var input = $('#opt-input');
            var applyBtn = $('#btn-opt-apply');
            var id = button.data('id');
            var quantity = Number(button.data('quantity'));
            var price = Number(button.data('price'));
            var discount = button.data('discount');
            var modal = $(this);

            input.val(null);

            if (quantity > 0) {
                input.attr('placeholder', 'Quantity: x' + quantity);
                applyBtn.data('action', 'quantity');
                applyBtn.data('id', id);
            }
            if (price > 0) {
                input.attr('placeholder', 'Price: $' + price);
                applyBtn.data('action', 'price');
                applyBtn.data('id', id);
            }
            if (discount == 0) {
                input.attr('placeholder', 'Discount: ');
                applyBtn.data('action', 'discount');
                applyBtn.data('id', id);
            }
        });

        $('#opt-modal').on('hide.bs.modal', function () {
            var applyBtn = $('#btn-opt-apply');
            applyBtn.data('action', null);
            applyBtn.data('id', null);
        });






    </script>



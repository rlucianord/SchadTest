<!--Modal item lines-->
<div class="modal fade" id="opt-modal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="opt-modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
